<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.birthdaycard_app.MainActivity">

    <ImageView
        android:id="@+id/imgview_android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/happy_birthdau_aemie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:text="Happy Birthday Fuzail!" />

    <TextView
        android:id="@+id/fromhassaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From John"
        android:textSize="36sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
